<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dosage Details</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">Covid</a>
        <div class="collapse navbar-collapse" id="navbarText">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/admin">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/addcenter">Add Centers</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="/dosagedetail">Dosage Details</a>
                </li>
            </ul>
            <a href="/login"><span class="navbar-text">Logout</span></a>
        </div>
    </nav>

    <% if(dosages.length == 0) { %>
        <h3 style="text-align: center; width: 100%; margin-top: 2%;"><%= content %></h3>
    <% } else { %>
        <table id="dosagetable" class="bg-light">
            <tr>
                <th>Dosage ID</th>
                <th>Center ID</th>
                <th>Center Name</th>
                <th>Doses Administered</th>
                <th>Available Doses</th>
            </tr>
            <% dosages.forEach(function(dosage) { %>
                <tr>
                    <td><%= dosage.DosageId %></td>
                    <td><%= dosage.CenterId %></td>
                    <td><%= dosage.Name %></td>
                    <td><%= dosage.DosesAdministered %></td>
                    <td><%= dosage.AvailDoses %></td>
                </tr>
            <% }); %>
        </table>
    <% } %>
</body>
</html>